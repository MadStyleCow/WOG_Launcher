<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
        <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
            <section name="ApplicationUpdate.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
        </sectionGroup>
    </configSections>
    <!-- log4net -->
    <log4net>
      <!-- Appender starts here -->
      <appender name="FileAppender" type="log4net.Appender.FileAppender">
        <file value="Logs\ApplicationUpdateLog.txt" />
        <appendToFile value="true" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
        </layout>
      </appender>
      <!-- Appender ends here-->
      <root>
        <level value="DEBUG"/>
        <appender-ref ref="FileAppender" />
      </root>
    </log4net>
    <!-- log4net ends -->
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.1"/>
    </startup>
    <applicationSettings>
        <ApplicationUpdate.Properties.Settings>
            <setting name="RemoteManifest" serializeAs="String">
                <value>ftp://arma2.wogames.info/appmanifest.xml</value>
            </setting>
            <setting name="LocalManifest" serializeAs="String">
                <value>Resources\AppManifest.xml</value>
            </setting>
            <setting name="ApplicationPath" serializeAs="String">
                <value>UpdateClient.exe</value>
            </setting>
            <setting name="RetryAttempts" serializeAs="String">
                <value>3</value>
            </setting>
            <setting name="UpdateClient" serializeAs="String">
                <value>UpdateClient.exe</value>
            </setting>
        </ApplicationUpdate.Properties.Settings>
    </applicationSettings>
</configuration>
